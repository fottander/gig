<div class="holy-grail-grid">

  <div class="holy-grail-left">
    <%= link_to 'Kontrollpanel', dashboards_path, class: 'button-menu' %><br>
    <%= link_to 'Konto', edit_user_registration_path, class: 'button-menu' %><br>
    <% if current_user.profile.present? %>
      <%= link_to 'Profil', edit_profile_path(current_user.profile.id), class: 'button-menu' %>
      <%= link_to 'Inbjudningar', invites_path(profile_id: current_user.profile.id), class: 'button-menu' %>
      <% else %>
      <%= link_to 'Skapa profil', new_profile_path, class: 'button-menu' %>
    <% end %><br>
    <%= link_to 'Utbetalningar', payments_path, class: 'button-menu' %><br>
    <%= link_to 'Snabbfaktura', ezinvoices_path, class: 'button-menu' %><br>
    <%= link_to 'Hitta jobb', jobs_path, class: 'button-menu' %>
  </div>

  <div class="holy-grail-middle">
    <div class="portfolio-resume row">
      <div class="large-6 columns">
        <div class="portfolio-resume-wrapper">
          <h3 class="portfolio-resume-header">Dina utbetalningar</h3>
          <p class="portfolio-resume-subheader">
            <% if @invoices.present? %>
              <% @invoices.salary_paid.each do |invoice| %>
                <% if invoice.user_id == current_user.id %>
                  <span class='item-define'>Faktura ID:</span> <%= invoice.id.first(8) %><br>
                  <%= link_to invoice.updated_at.strftime("%F %R"), payment_path(invoice), class: 'reply-button' %><br><br>
                <% end %>
              <% end %>
            <% else %>
              Inga fakturor registrerade
            <% end %>
          </p>
          <div class="will-paginate">
              <%= will_paginate @invoices, renderer: FoundationPagination::Rails, previous_label: 'Tidigare', next_label: 'Nästa', inner_window: 1, outer_window: 1 %>
          </div>
        </div>
      </div>
      <div class="large-6 columns">
        <div class="portfolio-resume-wrapper">
          <h3 class="portfolio-resume-header">Fakturor som ej betalats ut</h3>
          <p class="portfolio-resume-subheader">
            <% if @invoices.present? %>
              <% @invoices.salary_not_paid.each do |invoice| %>
                <% if invoice.user_id == current_user.id %>
                  <span class='item-define'>Faktura ID:</span> <%= invoice.id.first(8) %><br>
                  Ocr.nr: <%= invoice.ocr_number %> <br>
                  Skapad: <%= invoice.updated_at.strftime("%F %R") %><br><br>
                <% end %>
              <% end %>
            <% else %>
              Inga fakturor registrerade
            <% end %>
          </p>
          <div class="will-paginate">
              <%= will_paginate @invoices, renderer: FoundationPagination::Rails, previous_label: 'Tidigare', next_label: 'Nästa', inner_window: 1, outer_window: 1 %>
          </div>
        </div>
      </div>
    </div>
    <div class="portfolio-resume row">
      <div class="large-6 columns">
        <div class="portfolio-resume-wrapper">
          <h3 class="portfolio-resume-header">Utbetalningar för snabbfakturor</h3>
          <p class="portfolio-resume-subheader">
            <% if @ezinvoices.present? %>
              <% @ezinvoices.salary_paid.each do |ezinvoice| %>
                <% if ezinvoice.user_id == current_user.id %>
                  <span class='item-define'>Faktura ID:</span> <%= ezinvoice.id.first(8) %><br>
                  <%= link_to ezinvoice.updated_at.strftime("%F %R"), ezpayment_path(ezinvoice), class: 'reply-button' %><br><br>
                <% end %>
              <% end %>
            <% else %>
              Inga fakturor registrerade
            <% end %>
          </p>
          <div class="will-paginate">
              <%= will_paginate @ezinvoices, renderer: FoundationPagination::Rails, previous_label: 'Tidigare', next_label: 'Nästa', inner_window: 1, outer_window: 1 %>
          </div>
        </div>
      </div>
      <div class="large-6 columns">
        <div class="portfolio-resume-wrapper">
          <h3 class="portfolio-resume-header">Snabbfakturor som ej betalats ut</h3>
          <p class="portfolio-resume-subheader">
            <% if @ezinvoices.present? %>
              <% @ezinvoices.salary_not_paid.each do |ezinvoice| %>
                <% if ezinvoice.user_id == current_user.id %>
                  <span class='item-define'>Faktura ID:</span> <%= ezinvoice.id.first(8) %><br>
                  Ocr.nr: <%= ezinvoice.ocr_number %> <br>
                  Skapad: <%= ezinvoice.updated_at.strftime("%F %R") %><br><br>
                <% end %>
              <% end %>
            <% else %>
              Inga fakturor registrerade
            <% end %>
          </p>
          <div class="will-paginate">
              <%= will_paginate @ezinvoices, renderer: FoundationPagination::Rails, previous_label: 'Tidigare', next_label: 'Nästa', inner_window: 1, outer_window: 1 %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
