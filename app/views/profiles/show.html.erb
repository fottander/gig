<div class="card-profile-stats">
  <div class="card-profile-stats-intro">
    <img class="card-profile-stats-intro-pic" src="https://vignette.wikia.nocookie.net/the-enigma-corporation/images/a/ae/Users-Group-icon.png/revision/latest/scale-to-width-down/480?cb=20140213102334" alt="profile-image" />
    <div class="card-profile-stats-intro-content">
      <h2><%= @profile.username %></h2>
      <% if @invoice.present? %>
        <p class='job-count'>Antal genomförda jobb: <%= @invoice.count %></p>
      <% end %>
      <p><%= @profile.description %></p>
    </div>
  </div>

  <hr />

  <div class="card-profile-stats-container">
    <div class="card-profile-stats-statistic">
      <span class="stat">Titel</span>
      <p><%= @profile.title %></p>
    </div>
    <div class="card-profile-stats-statistic">
      <span class="stat">Färdigheter</span>
      <p><%= @profile.skill %></p>
    </div>
    <div class="card-profile-stats-statistic">
      <span class="stat">Stad</span>
      <p><%= @profile.city %></p>
    </div>
    <div class="card-profile-stats-statistic">
      <span class="stat">Kategorier</span>
      <p><%= @profile.category %></p>
    </div>
    <div class="card-profile-stats-statistic">
      <span class="stat">Lön</span>
      <p><%= @profile.rate %></p>
    </div>
  </div>
</div>
