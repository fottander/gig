<h3>Browse all freelancers</h3>
<div class="button-select-section">
    <%= link_to 'Alla kategorier', {controller: 'profiles'}, {class: 'button-select'} %>
    <%= link_to 'Målare', {controller: 'profiles', with_category: 'Målare'}, {class: 'button-select'} %>
    <%= link_to 'Snickare', {controller: 'profiles', with_category: 'Snickare'}, {class: 'button-select'} %>
    <%= link_to 'Plåtslagare', {controller: 'profiles', with_category: 'Plåtslagare'}, {class: 'button-select'} %>
    <%= link_to 'Lagerarbetare', {controller: 'profiles', with_category: 'Lagerarbetare'}, {class: 'button-select'} %>
</div>

<% @profiles.each do |profile| %>
<div class="card profile-card-action-icons">
    <div class="card-section">
        <div class="profile-card-header">
            <div class="profile-card-avatar">
                <img class="avatar-image" src="https://vignette.wikia.nocookie.net/the-enigma-corporation/images/a/ae/Users-Group-icon.png/revision/latest/scale-to-width-down/480?cb=20140213102334" alt="Harry Manchanda">
            </div>
            <div class="profile-card-author">
                <h4 class="author-title"><%= link_to profile.username, profile_path(profile)%></h4>
                Title: <%= profile.title %>
                <div class="small-12 medium-2 columns add-friend">
                  <%= link_to 'View', profile_path(profile), class: 'reply-button' %>
                </div>
            </div>
        </div>
        <div class="profile-card-about">
            Beskrivning:
            <% if profile.description.length > 100 %>
                <%= truncate(profile.description, length: 100) %>
            <% else %>
                <%= profile.description %>
            <% end %>
            <br>
            | Kategorier:
            <%= profile.category %>
            | Budget:
            <%= profile.rate %>
            | Skills:
            <%= profile.skill %>
            | Stad:
            <%= profile.city %>
            |<br>
        </div>
    </div>
</div>
<% end %>

<div class="will-paginate">
    <%= will_paginate @profiles, renderer: FoundationPagination::Rails, previous_label: 'Tidigare', next_label: 'Nästa', inner_window: 1, outer_window: 1 %>
</div>
