<div class="holy-grail-grid">

  <div class="holy-grail-left">
    <%= link_to 'Kontrollpanel', administrations_path, class: 'button-menu' %>
    <%= link_to 'Användare', users_path, class: 'button-menu' %>
    <%= link_to 'Frilansare', adminprofiles_path, class: 'button-menu' %>
    <%= link_to 'Företag', companies_path, class: 'button-menu' %>
    <%= link_to 'Jobb', adminjobs_path, class: 'button-menu' %>
    <%= link_to 'Fakturor', admininvoices_path, class: 'button-menu' %>
    <%= link_to 'Snabbfakturor', adminezinvoices_path, class: 'button-menu' %>
    <%= link_to 'Ansökningar', applications_path, class: 'button-menu' %>
    <%= link_to 'Betalningar', adminpayments_path, class: 'button-menu' %>
  </div>

  <div class="holy-grail-middle">
    <div class="portfolio-resume row">

      <div class="large-4 columns">
        <div class="portfolio-resume-wrapper">
          <h3 class="portfolio-resume-header">Kategorier</h3>
          <p class="portfolio-resume-subheader">
            Skapa ny kategori
            <p class="portfolio-resume-subheader">
              <%= form_tag categories_path(@category) do %>
              <%= text_field_tag :name, nil, placeholder: 'Namn' %>
              <%= text_field_tag :ssyk_code, nil, placeholder: 'SSYK-kod' %>
              <%= label_tag :avatar, 'Kategoribild (.jpg .jpeg .png .gif)', class: 'form-text' %>
              <%= file_field_tag :avatar, class: 'form-text' %>
              <%= submit_tag 'Skapa kategori', class: 'profile-button-expand' %>
              <% end %>
            </p>
            <% @categories.each do |category| %>
              <div class='category-<%= category.id %>'>
                <div class="small-6 columns">
                  <%= category.id %>
                  <%= category.name %><br>
                  <%= image_tag category.avatar.url, style: 'width: 30px;' %> <br>
                  <%= link_to 'Delete', category_path(category), data: { confirm: "Är du säker?" }, method: :delete, class: 'button-orange' %>
                  <%= link_to 'Edit', edit_category_path(category), class: 'button-green' %><br><br>
                </div>
              </div>
            <% end %>
          </p>
        </div>
      </div>

      <div class="large-4 columns">
        <div class="portfolio-resume-wrapper">
          <h3 class="portfolio-resume-header">Nya fakturor</h3>
          <p class="portfolio-resume-subheader">
            <% @invoices.each do |invoice| %>
              <%= link_to invoice.ocr_number, admininvoice_path(invoice) %><br>
              ID: <%= invoice.id %><br>
              User ID: <%= invoice.user_id %><br>
              Company ID: <%= invoice.company_id %><br>
              Skapad: <%= invoice.created_at.strftime("%F %R") %><br><br>
            <% end %>
          </p>
        </div>
        <div class="will-paginate">
            <%= will_paginate @invoices, renderer: FoundationPagination::Rails, previous_label: 'Tidigare', next_label: 'Nästa', inner_window: 1, outer_window: 1 %>
        </div>
      </div>

      <div class="large-4 columns">
        <div class="portfolio-resume-wrapper">
          <h3 class="portfolio-resume-header">Nya snabbfakturor</h3>
          <p class="portfolio-resume-subheader">
            <% @ezinvoices.each do |ezinvoice| %>
              <%= link_to ezinvoice.ocr_number, adminezinvoice_path(ezinvoice) %><br>
              ID: <%= ezinvoice.id %><br>
              User ID: <%= ezinvoice.user_id %><br>
              Company Name: <%= ezinvoice.company_name %><br>
              Skapad: <%= ezinvoice.created_at.strftime("%F %R") %><br><br>
            <% end %>
          </p>
        </div>
        <div class="will-paginate">
            <%= will_paginate @ezinvoices, renderer: FoundationPagination::Rails, previous_label: 'Tidigare', next_label: 'Nästa', inner_window: 1, outer_window: 1 %>
        </div>
      </div>

    </div>
    <div class="portfolio-resume row">

      <div class="large-4 columns">
        <div class="portfolio-resume-wrapper">
          <h3 class="portfolio-resume-header">Nya Jobb</h3>
          <p class="portfolio-resume-subheader">
            <% @jobs.each do |job| %>
              ID: <%= job.id %><br>
              Titel: <%= job.title %><br>
              Username: <%= job.company_username %><br>
              Skapad: <%= job.created_at.strftime("%F %R") %><br><br>
            <% end %>
          </p>
        </div>
      </div>

      <div class="large-4 columns">
        <div class="portfolio-resume-wrapper">
          <h3 class="portfolio-resume-header">Nya Frilansare</h3>
          <p class="portfolio-resume-subheader">
            <% @profiles.each do |profile| %>
              ID: <%= profile.id %><br>
              Titel: <%= profile.title %><br>
              Username: <%= profile.username %><br>
              Skapad: <%= profile.created_at.strftime("%F %R") %><br><br>
            <% end %>
          </p>
        </div>
      </div>

      <div class="large-4 columns">
        <div class="portfolio-resume-wrapper">
          <h3 class="portfolio-resume-header">Nya Företag</h3>
          <p class="portfolio-resume-subheader">
            <% @companies.each do |company| %>
              ID: <%= company.id %><br>
              Namn: <%= company.name %><br>
              Username: <%= company.username %><br>
              Skapad: <%= company.created_at.strftime("%F %R") %><br><br>
            <% end %>
          </p>
        </div>
      </div>
    </div>

  </div>
</div>
