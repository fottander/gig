<div class="holy-grail-grid">

  <div class="holy-grail-left">
    <%= link_to 'Kontrollpanel', dashboards_path, class: 'button-menu' %><br>
    <%= link_to 'Konto', edit_user_registration_path, class: 'button-menu', style: 'background-color: #f77d0e;' %><br>
    <% if current_user.profile.present? %>
      <%= link_to 'Profil', edit_profile_path(current_user.profile.id), class: 'button-menu' %>
      <%= link_to 'Utbetalningar', payments_path, class: 'button-menu' %>
      <% else %>
      <%= link_to 'Skapa profil', new_profile_path, class: 'button-menu' %>
    <% end %><br>
    <%= link_to 'Fakturera utan företag', ezinvoices_path, class: 'button-menu' %><br>
    <%= link_to 'Hitta jobb', jobs_path, class: 'button-menu' %>
    <%= link_to "Avsluta konto", registration_path(resource_name), data: { confirm: "Är du säker?" }, method: :delete, class: 'button-menu' %>
    <div class="holy-grail-logo">
      <span class='q-font'>Q</span><span class='nekt-font'>NEKT</span>
    </div>
  </div>

  <div class="holy-grail-middle">
    <div class="holy-grail-vh">
      <div class="login-box-social-section-application-chat" style='padding-bottom: 2em;'>
        <div class='simple-form'>
          <div class='post-title'><h3>Redigera konto</h3></div>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= devise_error_messages! %>

            <div class="field">
              <%= f.label :email, class: 'form-text' %>
              <%= f.email_field :email, autofocus: true %>
            </div>

            <div class="field">
              <%= f.label :first_name, 'Förnamn', class: 'form-text' %>
              <%= f.text_field :first_name %>
            </div>

            <div class="field">
              <%= f.label :last_name, 'Efternamn', class: 'form-text' %>
              <%= f.text_field :last_name %>
            </div>

            <div class="field">
              <%= f.label :phone, 'Telefonnummer', class: 'form-text' %>
              <%= f.text_field :phone %>
            </div>
            <div style='color: #f77d0e; font-weight: 600;'>Betalningsinformation</div>
            <div class="field">
              <%= f.label :pers_num, 'Personnummer(10 siffror, ex. 751212xxxx)', class: 'form-text' %>
              <%= f.text_field :pers_num %>
            </div>

            <div class="field">
              <%= f.label :bank, 'Bank', class: 'form-text' %>
              <%= f.text_field :bank %>
            </div>

            <div class="field">
              <%= f.label :clear_nr, 'Clearingnummer', class: 'form-text' %>
              <%= f.text_field :clear_nr %>
            </div>

            <div class="field">
              <%= f.label :account_nr, 'Kontonummer', class: 'form-text' %>
              <%= f.text_field :account_nr %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <p class='truncated-paragraph-pass2'>
              <%= link_to 'Ändra lösenord', '', class: "read-more-pass2", style: 'background: #f77d0e; color: #fff; display: inline-block; text-align: center; line-height: 1; font-size: 0.8rem; font-weight: 700; letter-spacing: 0.5px; padding: 0.4rem 0.6rem 0.4rem; border-radius: 4px;' %>
            </p>
            <span class='normal-paragraph-pass2' style="display: none;">
              <%= f.label :current_password, 'Nuvarande lösenord', class: 'form-text' %> <i>(vi behöver ditt nuvarande lösenord för att bekräfta ändringar)</i>
              <%= f.password_field :current_password, autocomplete: "off" %>
              <%= f.label :password, 'Nytt lösenord', class: 'form-text-grey' %>
              <i>(lämna tomt om du inte vill ändra lösenord)</i>
              <% if @minimum_password_length %>
                <em><%= @minimum_password_length %> tecken minimum</em>
              <% end %>
              <%= f.password_field :password, autocomplete: "off" %>
              <%= f.label :password_confirmation, 'Bekräfta nytt lösenord', class: 'form-text-grey' %>
              <%= f.password_field :password_confirmation, autocomplete: "off" %>
            </span>

            <div class="actions">
              <%= link_to 'Avbryt', dashboards_path, class: 'cancel-button' %>
              <%= f.submit "Spara", class: 'reply-button' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <%= render 'footer_unscroll' %>
  </div>
</div>
