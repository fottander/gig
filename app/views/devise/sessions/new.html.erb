<div class="login-box">
  <div class="row collapse expanded">
    <div class="small-12 medium-6 column small-order-2 medium-order-1">
      <div class="login-box-form-section">
        <div class='login-title'>
          <span style='color: white; font-weight: 700;'>Logga in som frilansare</span>
        </div>
        <div class="login-box-input"><%= link_to "Logga in företag >>", new_company_session_path, class: 'switch-button' %></div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
        <div class="login-box-input">
          <%= f.email_field :email, placeholder: "Email", autofocus: true %>
        </div>
        <div class="login-box-input">
          <%= f.password_field :password, placeholder: "Lösenord", autocomplete: "off" %>
        </div>
        <% if devise_mapping.rememberable? -%>
          <div class="login-box-input">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, 'Kom ihåg mig' %>
          </div>
        <% end -%>
        <div class="actions">
          <%= f.submit "Logga in", id: 'reply', class: 'reply-button', style:'width: 50%;' %>
          <p>eller <%= render "devise/shared/links" %></p>
        </div>
        <%end %>
      </div>
    </div>
    <div class="small-12 medium-6 column small-order-1 medium-order-2 login-box-social-section">
      <div class="login-box-social-section-user-login">
        <span class="login-box-social-headline">Fördelar med vår tjänst</span>
        <p class="login-box-social-content">Enkelt att nytt hitta jobb</p>
        <p class="login-box-social-content">Mer flexibla arbetstider</p>
        <div class="login-box-social-content">Jobba var du vill & för vem du vill <br><br>
          <%= link_to 'Läs mer om hur det fungerar', howitworks_path, class: 'profile-button' %>
        </div>
      </div>
    </div>
  </div>
  <div class="hero-divider-2">
    <ol class="progress-indicator">
      <li class="is-complete" data-step="1">
        <span>Registrera dig & skapa därefter en profil</span>
      </li>
      <li class="is-complete" data-step="2">
        <span>Hitta jobb som passar & skapa en ansökan</span>
      </li>
      <li class="is-current" data-step="3">
        <span>Bli anställd & utför jobbet</span>
      </li>
      <li class="is-current" data-step="4">
        <span>Ange dina timmar & få betalt</span>
      </li>
    </ol>
  </div>
</div>
