<h3>COMPANY REGISTRATION</h3>
<div class="login-box">
  <div class="row collapse expanded">
    <div class="small-12 medium-6 column small-order-2 medium-order-1">
      <div class="login-box-form-section">
        <h1 class="login-box-title">Sign up</h1>
        <%= link_to "User registration >", new_user_registration_path %>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
        <div class="login-box-input">
          <%= f.email_field :email, placeholder: "Email", autofocus: true %>
        </div>
        <div class="login-box-input">
          <%= f.text_area :name, placeholder: "Company name" %>
        </div>
        <div class="login-box-input">
          <%= f.text_area :username, placeholder: "Username" %>
        </div>
        <div class="login-box-input">
          <%= f.text_area :address, placeholder: "Address" %>
        </div>
        <div class="login-box-input">
          <%= f.text_area :zip_code, placeholder: "Zip code" %>
        </div>
        <div class="login-box-input">
          <%= f.text_area :city, placeholder: "City" %>
        </div>
        <div class="login-box-input">
          <%= f.text_area :org_number, placeholder: "Org number" %>
        </div>
        <div class="login-box-input">
          <%= f.text_area :phone, placeholder: "Phone" %>
        </div>
        <div class="login-box-input">
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, placeholder: "Password", autocomplete: "off" %>
        </div>

        <div class="login-box-input">
          <br>
          <%= f.password_field :password_confirmation, placeholder: "Password confirmation", autocomplete: "off" %>
        </div>

        <div class="actions">
          <br>
          <%= f.submit "Sign up", class: 'boton-large' %>
          <p>or <%= render "companies/shared/links" %></p>
        </div>
        <%end %>
      </div>
    </div>
    <div class="small-12 medium-6 column small-order-1 medium-order-2 login-box-social-section">
      <div class="login-box-social-section-inner">
        <span class="login-box-social-headline">Sign in with<br />your social network</span>
        <a class="login-box-social-button-facebook">Log in with facebook</a>
        <a class="login-box-social-button-twitter">Log in with Twitter</a>
        <a class="login-box-social-button-google">Log in with Google+</a>
      </div>
    </div>
  </div>
</div>
