<div class="login-box">
  <div class="row collapse expanded">
    <div class="small-12 medium-6 column small-order-2 medium-order-1">
      <div class="login-box-form-section">
        <div class='post-title'><h3>Logga in som företag</h3></div>
        <div class="login-box-input"><%= link_to "Logga in frilansare >>", new_user_session_path, class: 'switch-button' %></div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="login-box-input">
          <%= f.email_field :email, placeholder: "Email", autofocus: true %>
        </div>
        <div class="login-box-input">
          <%= f.password_field :password, placeholder: "Lösenord", autocomplete: "off" %>
        </div>
        <% if devise_mapping.rememberable? -%>
          <div class="login-box-input">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, 'Kom ihåg mig' %>
          </div>
        <% end -%>
        <div class="actions">
          <%= f.submit "Logga in", class: 'reply-button' %>
          <p>eller <%= render "companies/shared/links" %></p>
        </div>
        <%end %>
      </div>
    </div>
    <div class="small-12 medium-6 column small-order-1 medium-order-2 login-box-social-section">
      <div class="login-box-social-section-company-login">
        <span class="login-box-social-headline">Vi hjälper dig i alla lägen</span>
        <p class="login-box-social-content">Framtidens jobbsök är här</p>
        <p class="login-box-social-content">Få fakturan när jobbet är godkänt</p>
        <p class="login-box-social-content">Helt gratis!</p>
      </div>
    </div>
  </div>
</div>
