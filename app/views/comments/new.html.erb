<h3>Reply to application no. <%= @application.id %></h3>
<div class="card-profile-stats">
  <div class="simple-form">
    <%= link_to 'Back to application', job_application_path(@job, @application) %>
    <%= form_for ([@job, @application, @comment]) do |f| %>
    <%= f.label :comment %>
    <%= f.text_area :comment %>
    <%= f.submit 'Submit', class: 'boton-large' %>
    <% end %>
  </div>
</div>
