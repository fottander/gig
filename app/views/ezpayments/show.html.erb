<div class="holy-grail-grid">

  <div class="holy-grail-left">
    <%= link_to 'Kontrollpanel', dashboards_path, class: 'button-menu' %><br>
    <%= link_to 'Konto', edit_user_registration_path, class: 'button-menu' %><br>
    <% if current_user.profile.present? %>
      <%= link_to 'Profil', edit_profile_path(current_user.profile.id), class: 'button-menu' %>
      <%= link_to 'Utbetalningar', payments_path, class: 'button-menu', style: 'background-color: #f77d0e;' %>
      <% else %>
      <%= link_to 'Skapa profil', new_profile_path, class: 'button-menu' %>
    <% end %><br>
    <%= link_to 'Snabbfaktura', ezinvoices_path, class: 'button-menu' %><br>
    <%= link_to 'Hitta jobb', jobs_path, class: 'button-menu' %>
  </div>

  <div class="holy-grail-middle">
    <div class="portfolio-resume row">
      <div class="large-6 columns">
        <div class="portfolio-resume-wrapper">
          <h3 class="portfolio-resume-header">Utbetalning</h3>
          <p class="portfolio-resume-subheader">
            <% if @ezinvoice.user_id == current_user.id %>
              <span class='item-define'>Faktura ID:</span> <%= @ezinvoice.id.first(8) %><br>
              <span class='item-define'>Startdag:</span> <%= @ezinvoice.first_day %><br>
              <span class='item-define'>Sista dag:</span> <%= @ezinvoice.last_day %><br>
              <span class='item-define'>Beskrivning:</span> <%= @ezinvoice.description %><br>
              <span class='item-define'>Referens:</span> <%= @ezinvoice.user_reference %><br>
              <span class='item-define'>Företagsreferens:</span> <%= @ezinvoice.company_reference %><br>
              <span class='item-define'>Företagsnamn:</span> <%= @ezinvoice.company_name %><br>
              <span class='item-define'>Organisationsnummer:</span> <%= @ezinvoice.org_number %><br>
              <span class='item-define'>Frilansar ID:</span> <%= @ezinvoice.profile_id %><br>
              <span class='item-define'>Frilansar användarnamn:</span> <%= @ezinvoice.profile_username %><br><br>
            <% end %>
          </p>
        </div>
      </div>
      <div class="large-6 columns">
        <div class="portfolio-resume-wrapper">
          <h3 class="portfolio-resume-header">Detaljer</h3>
          <p class="portfolio-resume-subheader">
            <% if @ezinvoice.user_id == current_user.id %>
              <span class='item-define'>Utbetald:</span>
              <% if @ezinvoice.salary_paid == true %>
                <%= @ezinvoice.updated_at.strftime("%F %R") %><br>
              <% else %>
                ej utbetald <br>
              <% end %>
              <span class='item-define'>Antal timmar:</span> <%= @ezinvoice.quantity %>st<br>
              <span class='item-define'>Timlön:</span> <%= @ezinvoice.unit %>kr/timma<br>
              Bruttolön: <%= @ezinvoice.amount %> <br>
              Bruttolön inkl. semesterersättning(12%): <%= @ezinvoice.bruttolon %> <br>
              Din avgiftsnivå vid skapandet av fakturan: <%= (@ezinvoice.user_fee * 100).round %>%<br>
              Vår avgift: -<%= (@ezinvoice.bruttolon * @ezinvoice.user_fee).round %> <br>
              Ny bruttolön inkl sem. ers:	<%= @ezinvoice.bruttolon_ef_avg %> SEK <br>
              Skatt:	-<%= @ezinvoice.loneskatt %> SEK <br>
              Nettolön (lön efter skatt): <%= @ezinvoice.nettolon %> SEK <br>
              <span class='item-define'>Utbetald summa: </span> <%= @ezinvoice.nettolon %> SEK<br>
            <% end %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
