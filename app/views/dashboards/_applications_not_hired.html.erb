<% if @applications_not_hired.present? %>
  <% @applications_not_hired.each do |application| %>
    <div class="portfolio-resume-subheader">
      <%= link_to application.job_title, job_path(application.job_id) %><br>
      Ansöknings ID: <%= application.id %><br>
      Jobb ID: <%= application.job_id %><br>
      Skapad: <%= application.created_at.strftime("%F %R") %><br>
      <span style='color: green;'>Antal svar: <%= application.comments.count %></span>
    </div>
    <%= link_to 'Visa ansökan', job_application_path(application.job_id, application.id), class: 'button-green' %>
    <%= link_to 'Redigera', edit_job_application_path(application.job_id, application.id), class: 'button-orange' %>
  <% end %>
<% else %>
  <strong>Inga aktiva ansökningar</strong><br>
  <%= link_to 'Ansök till jobb här!', jobs_path %>
<% end %>
<div class="will-paginate">
    <%= will_paginate @applications_not_hired, param_name: 'not_hired', renderer: FoundationPagination::Rails, previous_label: 'Tidigare', next_label: 'Nästa', inner_window: 1, outer_window: 1 %>
</div>
