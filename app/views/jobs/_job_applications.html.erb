<% if @applications.present? %>
  <% @applications.each do |application| %>
  <div class='portfolio-card'>
    <div class='portfolio-card-header' style='font-weight: 600;'><%= application.profile_username %></div>
    <span class="portfolio-resume-subheader">
      <% if application.hired == true %>
          Anställd!
        <% if application.complete == true %>
          & jobb genomfört!
        <% end %><br>
      <% end %>
    </span>
    <%= link_to 'Visa ansökan', job_application_path(@job, application), class: 'button-green' %>
    <%= link_to 'Profil', profile_path(application.profile_id), class: 'button-orange' %>
  </div>
  <% end %>
<% else %>
  Inga ansökningar hittills
<% end %>
<div class="will-paginate">
    <%= will_paginate @applications, renderer: FoundationPagination::Rails, previous_label: 'Tidigare', next_label: 'Nästa', inner_window: 1, outer_window: 1 %>
</div>
